#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void) {
	int i, inside = 0;
	double x, y, dist, pi;
	//initialize random seed
	srand(time(NULL));

	for(i = 0; i < 10000; i++){
		x = (double) rand() / RAND_MAX;
		y = (double) rand() / RAND_MAX;

		dist = x * x + y * y;

		if(dist <= 1){
			inside++;
		}
	}


	pi = (double) (inside / 10000) * 4;
	printf("%f", pi);

	return 0;
}
